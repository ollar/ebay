<div class="meta">
    {{#if author}}
        {{t 'common.by'}}
        <span class="author-wrapper">
            {{icon-image data=author.firstObject _size=24}}
            <span class="author">{{author.firstObject.username}}</span>,
        </span>
    {{/if}}
    {{t 'common.on'}}
    <span class="date">
        {{format-date comment.timestamp 'h:mm:ss A, Do MMM'}}
    </span>
</div>

<h4 class="title">
    {{comment.title}}
</h4>

<div class="body">
    {{comment.body}}
</div>

{{yield}}