{{#if session.isAuthenticated}}
    <button class="drawer-toggle-button" {{action 'toggleDrawer'}}>
        {{icons/icon-menu size=30}}
    </button>
    <nav>
        {{link-to (t 'links.home') 'index'}}

        {{link-to (t 'navigation.create_product') 'create-product'}}
        {{link-to (t 'navigation.orders') 'orders'}}

    </nav>

    {{yield}}

    <button {{action 'invalidateSession'}} class="logout-button">
        {{t 'navigation.logout'}}
    </button>
{{/if}}
