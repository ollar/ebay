<div class="container product-details">
    <div class="back-button">
        <button {{action 'goBack'}}>
            {{t 'product_details.buttons.goBack'}}
        </button>
    </div>
    <h1 class="title">
        {{model.title}}
    </h1>

    <div class="tabs two">
        {{#each model.images as |image index|}}
            <input id="tabC-{{index }}" type='radio' name='tabGroupC' >
        {{/each}}
        <div class='row'>
            {{#each model.images as |image index|}}
                <div>
                    <img src={{image.base64}} width={{image.width}} height={{image.height}}>
                </div>
            {{/each}}
        </div>

        {{#each model.images as |image index|}}
            <label for="tabC-{{index}}">
                <img src={{image.base64}} width={{image.width}} height={{image.height}}>
            </label>
        {{/each}}
    </div>

    <div class="description">
        {{model.description}}
    </div>

    <div class="price">
        {{price model.price}}
    </div>

    <div class="bids">
        {{bidsNumber}}
    </div>

    {{#unless model.sold}}
        <div class="buttons-wrapper">
            {{#if isAuthor}}
                {{#if bidsNumber}}
                    <button {{action 'sell_product'}}>
                        {{t 'product_details.buttons.grant_to_last_bidder'}}
                    </button>
                {{/if}}
            {{else}}
            {{link-to (t 'product_details.buttons.bid') 'index.product-details.bid'
                class="bid button" }}
            {{/if}}
        </div>
    {{else}}
        <h3>
            {{t 'product_details.sold_message'}}
        </h3>
    {{/unless}}

    {{outlet}}
</div>