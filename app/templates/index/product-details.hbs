<div class="container product-details">
    <div class="back-button">
        <button {{action 'goBack'}}>
            {{t 'product_details.buttons.goBack'}}
        </button>
    </div>
    <h1 class="title">
        {{model.title}}

        <div class="bids">
            ({{bidsNumber}})
        </div>
    </h1>

    {{#swiper-container}}
        {{#each model.images as |image index|}}
            <div class="swiper-slide">
                <img class="img" src={{image.base64}} width={{image.width}} height={{image.height}}>
            </div>
        {{/each}}
    {{/swiper-container}}

    <div class="description">
        {{model.description}}
    </div>

    <div class="price">
        {{price model.price}}
    </div>

    {{#unless model.sold}}
        <div class="buttons-wrapper">
            {{#if isAuthor}}
                {{#if bidsNumber}}
                    <button {{action 'sell_product'}}>
                        {{t 'product_details.buttons.grant_to_last_bidder'}}
                    </button>
                {{/if}}
            {{else}}
            {{link-to (t 'product_details.buttons.bid') 'index.product-details.bid'
                class="bid button" }}
            {{/if}}
        </div>
    {{else}}
        <h3>
            {{t 'product_details.sold_message'}}
        </h3>
    {{/unless}}

    {{outlet}}
</div>