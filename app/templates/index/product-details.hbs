<h1 class="title">
    {{model.product.title}}
</h1>

{{#each model.images as |image|}}
    {{log image}}
    <img src={{image.base64}} width={{image.width}} height={{image.height}}>
{{/each}}

<div class="description">
    {{model.product.description}}
</div>

<div class="price">
    {{model.product.price}}
</div>

<div class="buttons-wrapper">
    {{link-to (t 'product-details.buttons.bid') 'index.product-details.bid' model.product.id
        class="bid button" }}
</div>

{{outlet}}