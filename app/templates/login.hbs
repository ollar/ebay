<h1 class="title">
    {{ t 'login.title'}}
</h1>

<form {{action "submit" on="submit"}} class="aligned">
    <div class="form-line upload-avatar">
        {{#each model.images as |image|}}
            <div class="image-wrapper">
                <img class="img" src={{image.base64}}>
            </div>
        {{else}}
            {{images-drop-area
                uploadImage=(action 'uploadImage')
                title=(t 'login.form.avatar.label')
            }}
        {{/each}}
    </div>

    <ul class="form-errors">
        {{#each model.errors as |error|}}
            <li>
                {{error.attribute}}: {{error.message}}
            </li>
        {{/each}}
    </ul>

    <div class="form-line">
        <label for="username">{{t 'login.form.username.label'}}</label>
        {{input name="username" value=model.username}}
    </div>

    <div class="buttons-wrapper">
        <button type="submit">
            {{t 'buttons.submit'}}
        </button>
    </div>
</form>